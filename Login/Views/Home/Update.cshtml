@model UserDetailsViewModel


<form asp-controller="home" asp-action="update" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="User.Id" class="col-sm-2 col-form-label">Id</label>
        <div class="col-sm-10">
            <input asp-for="User.Id" class="form-control" value="@Model.User.Id" readonly />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="User.Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="User.Name" class="form-control" value="@Model.User.Name" />
            <span asp-validation-for="User.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="User.Email" class="col-sm-2 col-form-label">E-Mail</label>
        <div class="col-sm-10">
            <input asp-for="User.Email" class="form-control" value="@Model.User.Email" />
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="User.UserName" class="col-sm-2 col-form-label">User Name</label>
        <div class="col-sm-10">
            <input asp-for="User.UserName" class="form-control" value="@Model.User.UserName" />
            <span asp-validation-for="User.UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="User.Password" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input asp-for="User.Password" class="form-control" type="password" value="@Model.User.Password" readonly />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="User.IsAdmin" class="col-sm-2 col-form-label">Is Admin</label>
        <div class="col-sm-10">
            <input asp-for="User.IsAdmin" class="form-control" value="@Model.User.IsAdmin" readonly />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>