@model UserDetailsViewModel

<div class="row justify-content-left">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Title</h1>
            </div>
            <div class="card-body text-center">
                <h4>Name: @Model.User.Name</h4>
                <h4>Email: @Model.User.Email</h4>
            </div>
            <div class="card-footer">
                <a asp-controller="home" asp-action="update" asp-route-id="@Model.User.Id" class="btn btn-primary">Update</a>
            </div>
        </div>
    </div>
</div>